<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/extrasWindow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/extrasWindow"
        android:text="Add Extra"
        android:textSize="11sp" />

    <RelativeLayout
        android:id="@+id/extrasWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#673AB7"
        android:padding="5dp">

        <ScrollView
            android:id="@+id/extrasScrollWindow"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:background="#352A49">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/addExtra"
        android:layout_alignBottom="@id/extrasWindow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Do It"
        android:textSize="11sp" />
</RelativeLayout>