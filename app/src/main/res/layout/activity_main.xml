<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/checkbox_off_background" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/checkbox_off_background" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/checkbox_off_background" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/checkbox_off_background" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/checkbox_off_background" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/extrasWindow"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#06A9F3"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/fbtCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/hbtCont"
            android:layout_alignTop="@id/fullBodyContainer"
            android:layout_alignEnd="@id/hbtCont"
            android:layout_marginTop="13dp"
            android:background="#7C2D2D"
            android:padding="5dp">

            <TextView
                android:id="@+id/fullBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="3dp"
                android:text="Full Body: "
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hbtCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fbtCont"
            android:layout_marginTop="38dp"
            android:layout_marginRight="10dp"
            android:background="#7C2D2D"
            android:padding="5dp">

            <TextView
                android:id="@+id/halfBodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="3dp"
                android:text="Half Body: "
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hstCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hbtCont"
            android:layout_alignStart="@id/hbtCont"
            android:layout_alignEnd="@id/hbtCont"
            android:layout_marginTop="43dp"
            android:background="#7C2D2D"
            android:padding="5dp">

            <TextView
                android:id="@+id/headshotText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="3dp"
                android:text="Headshot: "
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fullBodyContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/halfBodyContainer"
            android:background="#7C2D2D"
            android:padding="5dp">

            <EditText
                android:id="@+id/fullBodyNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="3"
                android:gravity="center"
                android:hint="#"
                android:inputType="number"
                android:minHeight="48dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/halfBodyContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullBodyContainer"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/hbtCont"
            android:background="#FF7C2D2D"
            android:padding="5dp">

            <EditText
                android:id="@+id/halfBodyNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="3"
                android:gravity="center"
                android:hint="#"
                android:inputType="number"
                android:minHeight="48dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/headshotContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/halfBodyContainer"
            android:layout_alignEnd="@id/halfBodyContainer"
            android:layout_marginTop="20dp"
            android:background="#FF7C2D2D"
            android:padding="5dp">

            <EditText
                android:id="@+id/headshotNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="3"
                android:gravity="center"
                android:hint="#"
                android:inputType="number"
                android:minHeight="48dp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/addExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/extrasWindow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/extrasWindow"
        android:text="Add Extra"
        android:textSize="11sp" />

    <RelativeLayout
        android:id="@+id/extrasWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#673AB7"
        android:padding="5dp">

        <ScrollView
            android:id="@+id/extrasScrollWindow"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:background="#352A49"
            android:contentDescription="extras">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/addExtra"
        android:layout_alignBottom="@id/extrasWindow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Do It"
        android:textSize="11sp" />

</RelativeLayout>